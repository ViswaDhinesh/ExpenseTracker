                                                @foreach (var submenu in currentSubMenus)
                                                {
                                                    <li>
                                                        <a href=@submenu.SubMenuUrl title="@submenu.SubMenuName">@submenu.SubMenuName</a>
                                                    </li>
                                                }
                                            </ul>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="dropdown">
                                            <a class="" href="@menu.MenuUrl" data-toggle="dropdown" title="@menu.MenuName">@menu.MenuName</a>
                                        </li>
                                    }
                                }
                            }

