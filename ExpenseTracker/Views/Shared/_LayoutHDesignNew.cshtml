                            @if (menus != null)
                            {
                                foreach (var menu in menus)
                                {
                                    currentSubMenus = new List<ETSubMenu>();
                                    currentSubMenus = subMenus.Where(x => x.MenuID == menu.MenuID && x.Status && x.IsMainMenu).ToList();

