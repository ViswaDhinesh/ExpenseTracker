@model  ExpenseTracker.ETCategory
@{
    ViewBag.Title = "Category Creation";
    Layout = "~/Views/Shared/_LayoutHDesignNew.cshtml";
    ViewBag.Menu = "Category";
}
<script>
    function PreviousPage() {
        window.location = "/Category/Index";
    }
</script>
@using (Html.BeginForm("Category_add", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="pageheader col-lg-12">
            <h3 class="page-title text-primary">Category Creation</h3>
            <hr>
        </div>
    </div>
    <div class="container-fluid">

        <div class="col-lg-12 col-md-12 col-sm-12">
            @if (ViewBag.messagealert != string.Empty)
            {
                <div class="alert alert-dismissible alert-danger">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    @ViewBag.messagealert
                </div>
            }
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Category Details</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">Source Type<span class="required"> *</span></label>
                            @*@Html.TextBoxFor(m => m.CategoryTypeID, new { @class = "form-control", autocomplete = "off", maxlength = 1 })*@
                            @Html.DropDownListFor(m => m.CategoryTypeID, new SelectList(ViewBag.Source, "Value", "Text", ViewBag.SourceId), new { @class = "form-control IsRequiredDropDown singleSelect" })
                            <span class="error-text">
                                @Html.ValidationMessageFor(model => model.CategoryTypeID)
                            </span>
                        </div>
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">Category Name<span class="required"> *</span></label>
                            @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", autocomplete = "off", maxlength = 250 })
                            <span class="error-text">
                                @Html.ValidationMessageFor(model => model.CategoryName)
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">Status</label>
                            <div class="attr-section">
                                <label class="radio radio-inline">
                                    @Html.RadioButtonFor(m => m.IsActive, true, new { @checked = true }) Enable
                                    <span class="checkround"></span>
                                </label>
                                <label class="radio radio-inline">
                                    @Html.RadioButtonFor(m => m.IsActive, false, new { }) Disable
                                    <span class="checkround"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row save-button-section">
                        <div class="form-group col-md-6 col-sm-6 pull-left text-left">
                            <input type="submit" class="btn btn-primary" title="Save" value="Save">
                            <input type="button" class="btn btn-secondary close-space" title="Back" value="Back" onclick="PreviousPage();" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}