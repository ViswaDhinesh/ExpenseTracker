@model  ExpenseTracker.ETBank
@{
    ViewBag.Title = "Bank Creation";
    Layout = "~/Views/Shared/_LayoutHDesignNew.cshtml";
    ViewBag.Menu = "Bank";
}
<script>
    function PreviousPage() {
        window.location = "/Bank/Index";
    }
</script>
@using (Html.BeginForm("Bank_add", "Bank", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="pageheader col-lg-12">
            <h3 class="page-title text-primary">Bank Creation</h3>
            <hr>
        </div>
    </div>
    <div class="container-fluid">

        <div class="col-lg-12 col-md-12 col-sm-12">
            @if (ViewBag.messagealert != string.Empty)
            {
                <div class="alert alert-dismissible alert-danger">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    @ViewBag.messagealert
                </div>
            }
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Bank Details</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">Account Holder<span class="required"> *</span></label>
                            @Html.TextBoxFor(m => m.AccountHolder, new { @class = "form-control", autocomplete = "off", maxlength = 100 })
                            <span class="error-text">
                                @Html.ValidationMessageFor(model => model.AccountHolder)
                            </span>
                        </div>
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">Account Number<span class="required"> *</span></label>
                            @Html.TextBoxFor(m => m.AccountNumber, new { @class = "form-control", autocomplete = "off", maxlength = 100 })
                            <span class="error-text">
                                @Html.ValidationMessageFor(model => model.AccountNumber)
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">IFSC Code<span class="required"> *</span></label>
                            @Html.TextBoxFor(m => m.IFSCCode, new { @class = "form-control", autocomplete = "off", maxlength = 50 })
                            <span class="error-text">
                                @Html.ValidationMessageFor(model => model.IFSCCode)
                            </span>
                        </div>
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">Bank Name<span class="required"> *</span></label>
                            @Html.TextBoxFor(m => m.BankName, new { @class = "form-control", autocomplete = "off", maxlength = 100 })
                            <span class="error-text">
                                @Html.ValidationMessageFor(model => model.BankName)
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">Branch Name<span class="required"> *</span></label>
                            @Html.TextBoxFor(m => m.BranchName, new { @class = "form-control", autocomplete = "off", maxlength = 100 })
                            <span class="error-text">
                                @Html.ValidationMessageFor(model => model.BranchName)
                            </span>
                        </div>
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">Account Type<span class="required"> *</span></label>
                            @Html.DropDownListFor(m => m.AccountType, new SelectList(ViewBag.AccountTypes, "Value", "Text", ViewBag.ValueUniqueID), new { @class = "form-control IsRequiredDropDown singleSelect" })
                            <span class="error-text">
                                @Html.ValidationMessageFor(model => model.AccountType)
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">Minimum Balance<span class="required"> *</span></label>
                            @Html.TextBoxFor(m => m.MinimumBalance, new { @class = "form-control", autocomplete = "off", maxlength = 20 })
                            <span class="error-text">
                                @Html.ValidationMessageFor(model => model.MinimumBalance)
                            </span>
                        </div>
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">Account Opening Date</label>
                            @Html.TextBoxFor(m => m.AccountOpeningDate, new { @class = "form-control", autocomplete = "off", maxlength = 100 })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">Customer ID</label>
                            @Html.TextBoxFor(m => m.CustomerID, new { @class = "form-control", autocomplete = "off", maxlength = 50 })
                        </div>
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">Password</label>
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", autocomplete = "off", maxlength = 100 })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", autocomplete = "off", maxlength = 100 })
                        </div>
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">Phone</label>
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", autocomplete = "off", maxlength = 20 })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">ATM Number</label>
                            @Html.TextBoxFor(m => m.ATMNumber, new { @class = "form-control", autocomplete = "off", maxlength = 25 })
                        </div>
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">PIN Number</label>
                            @Html.TextBoxFor(m => m.PINNumber, new { @class = "form-control", autocomplete = "off", maxlength = 10 })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">Expired Date</label>
                            @Html.TextBoxFor(m => m.ExpiredDate, new { @class = "form-control", autocomplete = "off", maxlength = 100 })
                        </div>
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">CVV</label>
                            @Html.TextBoxFor(m => m.CVV, new { @class = "form-control", autocomplete = "off", maxlength = 5 })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">Status</label>
                            <div class="attr-section">
                                <label class="radio radio-inline">
                                    @Html.RadioButtonFor(m => m.IsActive, true, new { @checked = true }) Enable
                                    <span class="checkround"></span>
                                </label>
                                <label class="radio radio-inline">
                                    @Html.RadioButtonFor(m => m.IsActive, false, new { }) Disable
                                    <span class="checkround"></span>
                                </label>
                            </div>
                        </div>
                        <div class="form-group col-md-4 col-sm-4">
                            <label style="font-weight:bold">IsCreditCard</label>
                            <div class="attr-section">
                                <label class="radio radio-inline">
                                    @Html.RadioButtonFor(m => m.IsCreditCard, true, new { @checked = true }) Enable
                                    <span class="checkround"></span>
                                </label>
                                <label class="radio radio-inline">
                                    @Html.RadioButtonFor(m => m.IsCreditCard, false, new { }) Disable
                                    <span class="checkround"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row save-button-section">
                        <div class="form-group col-md-6 col-sm-6 pull-left text-left">
                            <input type="submit" class="btn btn-primary" title="Save" value="Save">
                            <input type="button" class="btn btn-secondary close-space" title="Back" value="Back" onclick="PreviousPage();" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}