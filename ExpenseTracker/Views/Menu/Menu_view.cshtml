@model ExpenseTracker.ETMenu
@{
    ViewBag.Title = "Menu View";
    Layout = "~/Views/Shared/_LayoutHDesignNew.cshtml";
    ViewBag.Menu = "Menu";
}

<script>
    function PreviousPage() {
        window.location = "/Menu/Index";
    }

</script>

<div class="container-fluid">
    <div class="pageheader col-lg-12">
        <h3 class="page-title text-primary">Menu View</h3>
        <hr>
    </div>
</div>

<div class="container-fluid">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">Menu Details</h3>
            </div>
            <div class="panel-body">
                <div class="row bottom-space">
                    <label class="col-lg-5 col-md-5 col-xs-5"><b>Menu Name</b></label>
                    <div class="pull-left col-lg-7 col-md-7 col-xs-7">
                        <p>@Html.DisplayFor(m => m.MenuName)</p>
                    </div>
                </div>
                <div class="row bottom-space">
                    <label class="col-lg-5 col-md-5 col-xs-5"><b>Page URL</b></label>
                    <div class="pull-left col-lg-7 col-md-7 col-xs-7">
                        <p>@Html.DisplayFor(m => m.MenuUrl)</p>
                    </div>
                </div>
                <div class="row bottom-space">
                    <label class="col-lg-5 col-md-5 col-xs-5"><b>Order No.</b></label>
                    <div class="pull-left col-lg-7 col-md-7 col-xs-7">
                        <p>@Html.DisplayFor(m => m.OrderNo)</p>
                    </div>
                </div>
                <div class="row bottom-space">
                    <label class="col-lg-5 col-md-5 col-xs-5"><b>Status</b></label>
                    <div class="pull-left col-lg-7 col-md-7 col-xs-7">
                        <p>
                            @(Model.Status ? "Enabled" : "Disabled")
                        </p>
                    </div>
                </div>
                <div class="row save-button-section">
                    <div class="form-group col-md-6 col-sm-6 pull-left text-left">
                        <input type="button" value="Back" title="Back" class="btn btn-secondary" onclick="PreviousPage();" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
